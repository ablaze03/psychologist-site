---
import '../styles/global.css';
import type { ContentData } from '../types';

interface Props {
  content: ContentData;
}

const { content } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta -->
    <title>{content.meta.title}</title>
    <meta name="description" content={content.meta.description} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={content.meta.ogTitle} />
    <meta property="og:description" content={content.meta.ogDescription} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={content.meta.ogTitle} />
    <meta name="twitter:description" content={content.meta.ogDescription} />
    
    <!-- Яндекс.Метрика -->
    <!-- ИНСТРУКЦИЯ: После создания счетчика в Яндекс.Метрике, 
         вставьте сюда код счетчика между этими комментариями -->
    <!-- Пример:
    <script type="text/javascript">
       (function(m,e,t,r,i,k,a){
          // код от Яндекс.Метрики
       })(window, document, "script", ...);
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/XXXXXXXX" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    -->
    <!-- /Яндекс.Метрика -->
  </head>
  <body>
    <slot />
  </body>
</html>

