---
import type { ContentData } from '../types';

interface Props {
  faq: ContentData['faq'];
}

const { faq } = Astro.props;

function formatMarkdown(text: string): string {
  if (text === 'TODO') {
    return '<span class="text-ink/40 italic">Информация будет добавлена позже</span>';
  }
  return text
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/\n\n/g, '</p><p class="mt-4">')
    .replace(/\n/g, '<br>');
}
---

<section id="faq" class="section bg-base">
  <div class="container-custom">
    <h2 class="heading-2 mb-8 text-center text-ink">
      <span class="relative inline-block"><span class="absolute bottom-0 left-0 right-0 h-0.5 bg-ice/50 -z-10"></span>{faq.title}</span>
    </h2>
    <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-4">
      {faq.items.map((item) => (
        <details class="card bg-base/80 group !p-4">
          <summary class="cursor-pointer font-medium text-base text-ink flex items-center justify-between">
            <span>{item.question}</span>
            <span class="text-ink/40 group-open:rotate-180 transition-transform ml-2 flex-shrink-0">▼</span>
          </summary>
          <div 
            class="mt-3 text-sm text-ink/70 leading-relaxed"
            set:html={formatMarkdown(item.answer)}
          />
        </details>
      ))}
    </div>
  </div>
</section>

