---
import type { ContentData } from '../types';

interface Props {
  process: ContentData['process'];
}

const { process } = Astro.props;
---

<section id="process" class="section bg-white">
  <div class="container-custom">
    <div class="max-w-6xl mx-auto">
      <!-- Заголовок -->
      <h2 class="heading-2 mb-8 text-center text-ink">
        {process.title}
      </h2>

      <!-- Горизонтальная линия (скрывается на мобильных) -->
      <div class="hidden md:block">
        <!-- Контейнер с линией и кружками -->
        <div class="relative mb-8 px-4">
          <!-- Горизонтальная линия (по центру кружков) -->
          <div class="absolute left-[10%] right-[10%] top-8 h-1 bg-[#5A9B7D]" style="transform: translateY(-50%);"></div>
          
          <!-- Кружки с иконками -->
          <div class="relative grid grid-cols-4 gap-6">
            {process.steps.map((step) => (
              <div class="flex justify-center">
                <div class="w-16 h-16 rounded-full bg-white flex items-center justify-center text-[#5A9B7D] relative z-10" style="border: 3px solid #5A9B7D;">
                  {step.icon === 'heart' && (
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  )}
                  {step.icon === 'compass' && (
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {step.icon === 'sparkles' && (
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                  )}
                  {step.icon === 'target' && (
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Тексты строго под кружками -->
        <div class="grid grid-cols-4 gap-6 px-4">
          {process.steps.map((step) => (
            <div class="text-center">
              <h3 class="font-semibold text-base text-ink mb-1">{step.title}</h3>
              <p class="text-sm font-medium mb-2" style="color: #5A9B7D;">{step.subtitle}</p>
              <p class="text-sm text-ink/70 leading-relaxed">{step.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Мобильная версия -->
      <div class="md:hidden space-y-6">
        {process.steps.map((step) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-[#5A9B7D]/10 border-2 border-[#5A9B7D] flex items-center justify-center text-[#5A9B7D]">
                {step.icon === 'heart' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                )}
                {step.icon === 'compass' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {step.icon === 'sparkles' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                  </svg>
                )}
                {step.icon === 'target' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                )}
              </div>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-base text-ink mb-1">{step.title}</h3>
              <p class="text-sm font-medium mb-2" style="color: #5A9B7D;">{step.subtitle}</p>
              <p class="text-sm text-ink/70 leading-relaxed">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
