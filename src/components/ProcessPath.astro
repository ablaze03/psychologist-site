---
import type { ContentData } from '../types';

interface Props {
  process: ContentData['process'];
}

const { process } = Astro.props;
---

<section id="process" class="section bg-white">
  <div class="container-custom">
    <div class="max-w-6xl mx-auto">
      <!-- Заголовок -->
      <h2 class="heading-2 mb-12 text-center text-ink">
        {process.title}
      </h2>

      <!-- Горизонтальная линия (скрывается на мобильных) -->
      <div class="hidden md:block">
        <!-- Линия с кружками -->
        <div class="relative mb-8">
          <!-- Горизонтальная линия -->
          <div class="absolute top-1/2 left-8 right-8 h-1 bg-aquaSoft/30 -translate-y-1/2"></div>
          
          <!-- Кружки с иконками -->
          <div class="relative flex justify-between items-center px-4">
            {process.steps.map((step) => (
              <div class="flex flex-col items-center">
                <div class="w-16 h-16 rounded-full bg-white border-2 border-aquaSoft flex items-center justify-center text-aquaSoft relative z-10">
                  {step.icon === 'lightbulb' && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  )}
                  {step.icon === 'search' && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                  )}
                  {step.icon === 'tools' && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  )}
                  {step.icon === 'check' && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Тексты снизу -->
        <div class="grid grid-cols-4 gap-6">
          {process.steps.map((step) => (
            <div class="text-center">
              <h3 class="font-semibold text-base text-ink mb-1">{step.title}</h3>
              <p class="text-sm text-aquaSoft/80 font-medium mb-2">{step.subtitle}</p>
              <p class="text-sm text-ink/70 leading-relaxed">{step.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Мобильная версия -->
      <div class="md:hidden space-y-6">
        {process.steps.map((step) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-aquaSoft/10 border-2 border-aquaSoft flex items-center justify-center text-aquaSoft">
                {step.icon === 'lightbulb' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
                {step.icon === 'search' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                )}
                {step.icon === 'tools' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {step.icon === 'check' && (
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </div>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-base text-ink mb-1">{step.title}</h3>
              <p class="text-sm text-aquaSoft/80 font-medium mb-2">{step.subtitle}</p>
              <p class="text-sm text-ink/70 leading-relaxed">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
