---
import type { ScaleScore } from '../../types/screening';
import { getScaleDisplayName } from '../../lib/scoring';

// Эти данные будут заполняться динамически через JavaScript
---

<div class="result-chart">
  <h3 class="chart-title">Карта состояния</h3>
  
  <div class="chart-bars" id="chart-bars">
    <!-- Заполняется динамически -->
  </div>
</div>

<style>
  .result-chart {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    border: 1px solid var(--border-light);
  }

  .chart-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .chart-bars {
    display: grid;
    gap: 1.5rem;
  }

  .chart-bar-item {
    display: grid;
    gap: 0.5rem;
  }

  .chart-bar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .chart-bar-label {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .chart-bar-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-primary);
  }

  .chart-bar-track {
    height: 12px;
    background: var(--bg-secondary);
    border-radius: 999px;
    overflow: hidden;
  }

  .chart-bar-fill {
    height: 100%;
    border-radius: 999px;
    transition: width 0.6s ease;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
  }

  .chart-bar-fill.low {
    background: linear-gradient(90deg, #10b981, #34d399);
  }

  .chart-bar-fill.moderate {
    background: linear-gradient(90deg, #f59e0b, #fbbf24);
  }

  .chart-bar-fill.high {
    background: linear-gradient(90deg, #ef4444, #f87171);
  }

  .chart-bar-level {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    font-weight: 500;
    text-transform: capitalize;
  }

  @media (max-width: 640px) {
    .result-chart {
      padding: 1.5rem;
    }

    .chart-title {
      font-size: 1.125rem;
    }
  }
</style>

<script>
  // Вспомогательная функция для рендеринга графика
  // Будет вызываться из главной страницы
  (window as any).renderChart = function(scores: any[]) {
    const container = document.getElementById('chart-bars');
    if (!container || !scores) return;

    container.innerHTML = scores.map(score => `
      <div class="chart-bar-item">
        <div class="chart-bar-header">
          <span class="chart-bar-label">${score.label}</span>
          <span class="chart-bar-value">${score.percent}%</span>
        </div>
        <div class="chart-bar-track">
          <div class="chart-bar-fill ${score.level}" style="width: ${score.percent}%"></div>
        </div>
        <span class="chart-bar-level">${getLevelLabel(score.level)}</span>
      </div>
    `).join('');
  };

  function getLevelLabel(level: string): string {
    const labels: Record<string, string> = {
      low: 'Низкая выраженность',
      moderate: 'Умеренная выраженность',
      high: 'Высокая выраженность'
    };
    return labels[level] || level;
  }
</script>
