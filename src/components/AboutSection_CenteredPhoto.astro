      <p class="text-base text-ink/80 leading-relaxed">{content.about.approach.text}</p>
    </div>
    
    <!-- Моя философия -->
    <div class="bg-peach/10 rounded-xl p-6 border border-peach/20 hover:border-peach/40 transition-colors duration-300">
      <h3 class="text-xl font-semibold text-ink mb-3">{content.about.philosophy.title}</h3>
      <p class="text-base text-ink/80 leading-relaxed">{content.about.philosophy.text}</p>
