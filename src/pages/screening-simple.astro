    position: relative;
  }

  .answer-btn.selected .answer-radio {
    border-color: var(--accent);
  }

  .answer-btn.selected .answer-radio::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: var(--accent);
    border-radius: 50%;
  }

  .nav-buttons {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
  }

  .result-card {
    background: white;
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: left;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    h1, h2 {
      font-size: 1.75rem;
    }

    h3 {
      font-size: 1.25rem;
    }

    .nav-buttons {
      flex-direction: column-reverse;
    }

    .nav-buttons button {
      width: 100%;
    }

    .actions {
      flex-direction: column;
    }

    .actions a, .actions button {
      width: 100%;
    }
  }
</style>

<script>
  // –ü—Ä–æ—Å—Ç–∞—è –≤–µ—Ä—Å–∏—è state machine
  let currentScreen = 'welcome';
  let topic = '';
  let version = '';
  let currentQuestion = 0;
  let answers: Record<number, number> = {};

  // –ü—Ä–æ—Å—Ç—ã–µ —Ç–µ—Å—Ç–æ–≤—ã–µ –≤–æ–ø—Ä–æ—Å—ã
  const questions = [
    '–ú–∞–ª–æ –∏–Ω—Ç–µ—Ä–µ—Å–∞ –∏–ª–∏ —É–¥–æ–≤–æ–ª—å—Å—Ç–≤–∏—è –æ—Ç —Ç–æ–≥–æ, —á–µ–º –∑–∞–Ω–∏–º–∞–µ—Ç–µ—Å—å?',
    '–ß—É–≤—Å—Ç–≤—É–µ—Ç–µ –ø–æ–¥–∞–≤–ª–µ–Ω–Ω–æ—Å—Ç—å, –¥–µ–ø—Ä–µ—Å—Å–∏—é –∏–ª–∏ –±–µ–∑–Ω–∞–¥—ë–∂–Ω–æ—Å—Ç—å?',
    '–ß—É–≤—Å—Ç–≤—É–µ—Ç–µ –Ω–µ—Ä–≤–æ–∑–Ω–æ—Å—Ç—å, —Ç—Ä–µ–≤–æ–≥—É –∏–ª–∏ –Ω–∞–ø—Ä—è–∂–µ–Ω–∏–µ?',
    '–ù–µ –º–æ–∂–µ—Ç–µ –ø–µ—Ä–µ—Å—Ç–∞—Ç—å –±–µ—Å–ø–æ–∫–æ–∏—Ç—å—Å—è –∏–ª–∏ –∫–æ–Ω—Ç—Ä–æ–ª–∏—Ä–æ–≤–∞—Ç—å –±–µ—Å–ø–æ–∫–æ–π—Å—Ç–≤–æ?',
    '–ß—É–≤—Å—Ç–≤–æ–≤–∞–ª–∏, —á—Ç–æ –Ω–µ –º–æ–∂–µ—Ç–µ —Å–ø—Ä–∞–≤–∏—Ç—å—Å—è —Å –≤–∞–∂–Ω—ã–º–∏ –¥–µ–ª–∞–º–∏?',
  ];

  const answerLabels = ['–ù–∏–∫–æ–≥–¥–∞', '–ù–µ—Å–∫–æ–ª—å–∫–æ –¥–Ω–µ–π', '–ë–æ–ª—å—à–µ –ø–æ–ª–æ–≤–∏–Ω—ã –¥–Ω–µ–π', '–ü–æ—á—Ç–∏ –∫–∞–∂–¥—ã–π –¥–µ–Ω—å'];

  function showScreen(screenName: string) {
    document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
    const screen = document.getElementById(`screen-${screenName}`);
    if (screen) {
      screen.classList.add('active');
      window.scrollTo(0, 0);
    }
    currentScreen = screenName;
  }

  function renderQuestion() {
    const questionText = document.getElementById('question-text');
    const answersContainer = document.getElementById('answers');
    const progress = document.getElementById('progress');
    const progressText = document.getElementById('progress-text');

    if (questionText) questionText.textContent = questions[currentQuestion];
    
    const percent = Math.round(((currentQuestion + 1) / questions.length) * 100);
    if (progress) progress.style.width = `${percent}%`;
    if (progressText) progressText.textContent = `–í–æ–ø—Ä–æ—Å ${currentQuestion + 1} –∏–∑ ${questions.length}`;

    if (answersContainer) {
      answersContainer.innerHTML = answerLabels.map((label, i) => `
        <button class="answer-btn ${answers[currentQuestion] === i ? 'selected' : ''}" data-value="${i}">
          <div class="answer-radio"></div>
          <span>${label}</span>
        </button>
      `).join('');

      answersContainer.querySelectorAll('.answer-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const value = parseInt((e.currentTarget as HTMLElement).dataset.value || '0');
          answers[currentQuestion] = value;
          answersContainer.querySelectorAll('.answer-btn').forEach(b => b.classList.remove('selected'));
          (e.currentTarget as HTMLElement).classList.add('selected');
          const nextBtn = document.getElementById('btn-next') as HTMLButtonElement;
          if (nextBtn) nextBtn.disabled = false;
        });
      });
    }

    const nextBtn = document.getElementById('btn-next') as HTMLButtonElement;
    if (nextBtn) nextBtn.disabled = answers[currentQuestion] === undefined;

    const prevBtn = document.getElementById('btn-prev') as HTMLButtonElement;
    if (prevBtn) prevBtn.disabled = currentQuestion === 0;
  }

  // Event listeners
  document.getElementById('btn-start')?.addEventListener('click', () => showScreen('topic'));

  document.querySelectorAll('[data-topic]').forEach(btn => {
    btn.addEventListener('click', (e) => {
      topic = (e.currentTarget as HTMLElement).dataset.topic || '';
      showScreen('depth');
    });
  });

  document.querySelectorAll('[data-version]').forEach(btn => {
    btn.addEventListener('click', (e) => {
      version = (e.currentTarget as HTMLElement).dataset.version || '';
      showScreen('questions');
      renderQuestion();
    });
  });

  document.getElementById('btn-next')?.addEventListener('click', () => {
    if (currentQuestion < questions.length - 1) {
      currentQuestion++;
      renderQuestion();
    } else {
      showResults();
    }
  });

  document.getElementById('btn-prev')?.addEventListener('click', () => {
    if (currentQuestion > 0) {
      currentQuestion--;
      renderQuestion();
    }
  });

  document.getElementById('btn-restart')?.addEventListener('click', () => {
    currentQuestion = 0;
    answers = {};
    topic = '';
    version = '';
    showScreen('welcome');
  });

  function showResults() {
    const resultsContent = document.getElementById('results-content');
    if (resultsContent) {
      const sum = Object.values(answers).reduce((a, b) => a + b, 0);
      const max = Object.keys(answers).length * 3;
      const percent = Math.round((sum / max) * 100);

      resultsContent.innerHTML = `
        <div style="margin-bottom: 1.5rem;">
          <h4 style="margin-bottom: 0.5rem;">–û–±—â–∏–π –ø–æ–∫–∞–∑–∞—Ç–µ–ª—å: ${percent}%</h4>
          <p style="color: var(--text-light);">–¢–µ–º–∞: ${topic}, –í–µ—Ä—Å–∏—è: ${version}</p>
        </div>
        <div style="margin-bottom: 1.5rem;">
          <strong>–ò–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏—è:</strong>
          <p>${percent < 33 ? '–í—ã—Ä–∞–∂–µ–Ω–Ω–æ—Å—Ç—å —Å–∏–º–ø—Ç–æ–º–æ–≤ –Ω–∏–∑–∫–∞—è. –°–æ—Å—Ç–æ—è–Ω–∏–µ –≤ –ø—Ä–µ–¥–µ–ª–∞—Ö –Ω–æ—Ä–º—ã.' : 
             percent < 66 ? '–£–º–µ—Ä–µ–Ω–Ω–∞—è –≤—ã—Ä–∞–∂–µ–Ω–Ω–æ—Å—Ç—å —Å–∏–º–ø—Ç–æ–º–æ–≤. –†–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏—è —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç–∞.' :
             '–í—ã—Å–æ–∫–∞—è –≤—ã—Ä–∞–∂–µ–Ω–Ω–æ—Å—Ç—å —Å–∏–º–ø—Ç–æ–º–æ–≤. –ù–∞—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –æ–±—Ä–∞—Ç–∏—Ç—å—Å—è –∫ –ø—Å–∏—Ö–æ–ª–æ–≥—É –∏–ª–∏ –ø—Å–∏—Ö–æ—Ç–µ—Ä–∞–ø–µ–≤—Ç—É.'}</p>
        </div>
      `;
    }
    showScreen('results');
  }
</script>
